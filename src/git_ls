#! /bin/bash

#> synopsis: TODO: write down.
#> type: TODO: write down.
#> comment: TODO: write down.

function fun_git_ls() {
	find "$@" -type d -name ".git" | while read dir; do
		dir="${dir///\.git/}"
		status=$(git_check "${dir}")
		if $(test -n "$status"); then
			echo -e "${dir}\n${status}"
		fi
	done
}

fun_git_ls "$@"
